extends layout

block head
    script(type='text/javascript', src='js/jquery.prettyPhoto.js')
    script(type='text/javascript', src='js/jquery.quicksand.js')
    script(type='text/javascript', src='js/jquery.easing.1.3.js')
    script(type='text/javascript', src='js/script.js')
block content
    #header-bg
    #sub-header-bg
    // / Header Background
    // Main Container
    #body-wrapper
      // Header
      #header
        a#logo(href='/')
        // Navigation
        #search-container
          form#search(method='post')
            input.search(type='text', onfocus="if(this.value == 'Search Template') { this.value = ''; }", onblur="if(this.value == '') { this.value = 'Search Template'; }", value='Search Template')             
            button(type='submit') Submit        
        ul#navigation
          li
            a(href='/') Home            
          li.current
            a(href='/templates') Templates           
          li
            a(href='/contact') Contact
        // /Navigation
      // /Header
      // Content
      #content.container.clearfix
        // Back to top
        p#back-top(style='display: block;')
          a(href='#top')
            span
        // /Back to top
        ul.filter.group
          li.current.all
            a(href='#') All Projects                
          li.simple
            a(href='#') Simple
          li.commerce
            a(href='#') Commerce
          li.branding
            a(href='#') Branding
          li.marketing
            a(href='#') Marketing
        // Projects 4 columns
        #projects4
          each templateItem in items
            ul.template.group
              li.item(data-id='id-1', data-type='simple')
                .view.overlay
                  img(src=templateItem.image)
                  a(href=templateItem.link)
                    .mask
                      h3=templateItem.title                         
                      p=templateItem.tags
                        br
                        b=templateItem.year 
